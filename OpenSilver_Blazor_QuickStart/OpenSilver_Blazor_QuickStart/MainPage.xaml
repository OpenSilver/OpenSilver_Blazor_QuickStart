<Page x:Class="OpenSilver_Blazor_QuickStart.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:razor="clr-namespace:OpenSilver.Blazor;assembly=OpenSilver.Blazor"
      xmlns:local="clr-namespace:OpenSilver_Blazor_QuickStart"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">

    <Grid>
        <!-- Initialize Radzen Material Dark theme (must be loaded before Radzen components) -->
        <razor:RazorComponent Height="0" Width="0" VerticalAlignment="Top" HorizontalAlignment="Left">
            @using Radzen
            @using Radzen.Blazor
            <RadzenTheme Theme="material-dark" />
        </razor:RazorComponent>
        
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Background="Transparent">
        <StackPanel Margin="20" MaxWidth="900" HorizontalAlignment="Left">
            
            <!-- Header -->
            <TextBlock Text="OpenSilver.Blazor QuickStart" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="This sample demonstrates how to embed Blazor components inside XAML applications." 
                       FontSize="14" TextWrapping="Wrap" Margin="0,0,0,30" Opacity="0.7"/>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 1: Simple Embedded Razor Code -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 1: Simple Embedded Razor" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Write Razor markup directly inside your XAML using &lt;RazorComponent&gt;." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent>
                            <h3 style="margin: 0; color: #CE9178;">Hello from Blazor!</h3>
                            <p style="color: #D4D4D4;">This HTML is rendered by a Blazor component embedded in XAML.</p>
                        </razor:RazorComponent>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 2: Data Binding with ViewModel -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 2: XAML Data Binding in Razor" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Use {Binding} markup extensions inside Razor code. The Type attribute is required." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent>
                            <div style="color: #D4D4D4;">
                                <p><strong style="color: #9CDCFE;">Welcome Message:</strong> "{Binding WelcomeMessage, Type=String}"</p>
                                <p><strong style="color: #9CDCFE;">Current Time:</strong> "{Binding CurrentTime, Type=String}"</p>
                                <p><strong style="color: #9CDCFE;">Item Count:</strong> "{Binding ItemCount, Type=Int32}" items</p>
                            </div>
                        </razor:RazorComponent>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 3: External .razor Component -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 3: External .razor Component" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Reference Blazor components from separate .razor files using ComponentType." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent ComponentType="{x:Type local:Counter}" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 4: QuickGrid with Editing (Microsoft Official) -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 4: QuickGrid with Editing" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Microsoft's lightweight QuickGrid with inline editing. Edit cells directly, add or delete rows." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent x:Name="TaskGrid" ComponentType="{x:Type local:EditableTaskGrid}" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 5: Radzen DataGrid (3rd Party Library) -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 5: Radzen DataGrid (3rd Party)" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Full-featured grid from Radzen.Blazor with sorting, paging, and more." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent Height="320">
                            @using Radzen
                            @using Radzen.Blazor

                            <RadzenDataGrid Data="{Binding Employees, Type=IQueryable<OpenSilver_Blazor_QuickStart.Employee>}" 
                                            PageSize="5" 
                                            AllowPaging="true" 
                                            AllowSorting="true"
                                            Style="height: 100%">
                                <Columns>
                                    <RadzenDataGridColumn Property="FirstName" Title="First Name" Width="120px" />
                                    <RadzenDataGridColumn Property="LastName" Title="Last Name" Width="120px" />
                                    <RadzenDataGridColumn Property="BirthDate" Title="Birth Date" FormatString="{0:d}" Width="120px" />
                                    <RadzenDataGridColumn Property="Country" Title="Country" Width="100px" />
                                    <RadzenDataGridColumn Property="Notes" Title="Notes" />
                                </Columns>
                            </RadzenDataGrid>
                        </razor:RazorComponent>
                    </Border>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- SAMPLE 6: Event Handling -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Border Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Sample 6: Event Handling" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#4EC9B0" Margin="0,0,0,15"/>
                    <TextBlock Text="Bind Blazor events to your ViewModel methods using the Type attribute." 
                               FontSize="13" TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    
                    <Border Background="#2D2D2D" CornerRadius="4" Padding="15">
                        <razor:RazorComponent>
                            <button style="background-color: #0E639C; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; font-size: 14px; margin-right: 10px;"
                                    onclick="{Binding OnButtonClick, Type=Action}">
                                Click Me!
                            </button>
                            <button style="background-color: #3C3C3C; color: white; border: 1px solid #555; padding: 8px 16px; border-radius: 4px; cursor: pointer; font-size: 14px;"
                                    onclick="{Binding OnShowAlert, Type=Action}">
                                Show Alert
                            </button>
                        </razor:RazorComponent>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Border Background="#252526" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Want to see more?" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#CCCCCC">
                        <Run>For more examples with MudBlazor, Radzen, Blazorise, DevExpress, and Syncfusion, visit </Run>
                        <Hyperlink NavigateUri="https://opensilvershowcase.com" Foreground="#4EC9B0">OpenSilverShowcase.com</Hyperlink>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#CCCCCC" Margin="0,5,0,0">
                        <Run>Source code: </Run>
                        <Hyperlink NavigateUri="https://github.com/OpenSilver/OpenSilver.Samples.Showcase" Foreground="#4EC9B0">
                            github.com/OpenSilver/OpenSilver.Samples.Showcase
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
    </Grid>
</Page>
